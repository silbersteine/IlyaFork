<?xml version="1.0" encoding="UTF-8"?>
<xliff xmlns="urn:oasis:names:tc:xliff:document:1.2" version="1.2">
  <file source-language="en" datatype="plaintext" original="ng2.template" target-language="en">
    <body>

      <!-- Simple label -->
      <trans-unit id="app.button.save" datatype="html">
        <source>Save</source>
        <target state="new"></target>
        <note from="description">Primary action button label</note>
      </trans-unit>

      <!-- Longer sentence -->
      <trans-unit id="app.welcome.message" datatype="html">
        <source>Welcome to Lokalise â€” translate and ship faster.</source>
        <target state="new"></target>
        <note from="description">Hero message on the landing page</note>
      </trans-unit>

      <!-- Attribute (e.g., title or tooltip) -->
      <trans-unit id="app.tooltip.copy" datatype="html">
        <source>Copy to clipboard</source>
        <target state="new"></target>
        <note from="description">Tooltip text for copy action</note>
      </trans-unit>

      <!-- Interpolation (Angular expression) -->
      <trans-unit id="app.greeting.user" datatype="html">
        <source>Hello, <x id="INTERPOLATION" equiv-text="{{userName}}"/>! You have <x id="INTERPOLATION_1" equiv-text="{{unreadCount}}"/> unread messages.</source>
        <target state="new"></target>
        <note from="description">Personalized greeting with dynamic name and message count</note>
      </trans-unit>

      <!-- HTML markup inside message -->
      <trans-unit id="app.terms" datatype="html">
        <source>Please read our <x id="START_TAG_a" equiv-text="<a href=&quot;/terms&quot;>"/>terms of service<x id="CLOSE_TAG_a" equiv-text="</a>"/> before proceeding.</source>
        <target state="new"></target>
        <note from="description">Sentence with link; preserve HTML tag structure</note>
      </trans-unit>

      <!-- ICU plural example -->
      <trans-unit id="app.items.count" datatype="html">
        <source>{numItems, plural, =0 {You have no items.} one {You have 1 item.} other {You have # items.}}</source>
        <target state="new"></target>
        <note from="description">Pluralized message using ICU syntax; numItems is a number</note>
      </trans-unit>

      <!-- Message with newline / multi-line -->
      <trans-unit id="app.email.instructions" datatype="html">
        <source>
          Please confirm your email address by clicking the link we sent.
          If you didn't receive the email, check your spam folder or request a new confirmation.
        </source>
        <target state="new"></target>
        <note from="description">Multi-line instructional text shown on signup confirmation page</note>
      </trans-unit>

      <!-- Message that includes a placeholder for an HTML element (icon) -->
      <trans-unit id="app.search.placeholder" datatype="html">
        <source><x id="START_TAG_span" equiv-text="<span class=&quot;icon-search&quot;>"/> </x>Search everything...</source>
        <target state="new"></target>
        <note from="description">Search input placeholder; keep icon span</note>
      </trans-unit>

      <!-- Accessibility / aria-label example -->
      <trans-unit id="app.close.aria" datatype="html">
        <source>Close dialog</source>
        <target state="new"></target>
        <note from="description">Aria-label for modal close button</note>
      </trans-unit>

    </body>
  </file>
</xliff>
